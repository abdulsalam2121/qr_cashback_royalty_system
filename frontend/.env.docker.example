# Production Environment Configuration for Docker Compose
# Copy this to .env and customize for your deployment

# Database Configuration
POSTGRES_DB=qr_cashback_db
POSTGRES_USER=qr_cashback_user
POSTGRES_PASSWORD=your_very_secure_database_password_here
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password
REDIS_PORT=6379

# Application URLs
FRONTEND_URL=https://yourdomain.com
VITE_API_URL=https://api.yourdomain.com/api
BACKEND_PORT=3001
FRONTEND_PORT=80

# Port Configuration
HTTP_PORT=80
HTTPS_PORT=443

# JWT and Security
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_long
CSRF_SECRET=your_csrf_secret_different_from_jwt_secret

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID_BASIC=price_your_basic_plan_price_id
STRIPE_PRICE_ID_PRO=price_your_pro_plan_price_id

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=+14155238886

# Application Metadata
VITE_APP_NAME=QR Cashback & Loyalty System
VITE_APP_VERSION=1.0.0
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# Optional: Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com
